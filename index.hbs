{{!< default}}

{{!-- Homepage Header based on header_style setting --}}
{{#match @custom.header_style "!=" "Minimal"}}
<div class="gh-page-head{{#match @custom.header_style "Left aligned"}} left-aligned{{/match}}{{#if @custom.show_publication_cover}}{{#if @site.cover_image}} has-cover{{/if}}{{/if}}">
    {{#if @custom.show_publication_cover}}
        {{#if @site.cover_image}}
            <img class="gh-page-cover" src="{{img_url @site.cover_image size="xl"}}" alt="{{@site.title}}" />
        {{/if}}
    {{/if}}
    <div class="gh-page-head-content">
        {{#match @custom.header_style "Center aligned"}}
            {{#if @site.logo}}
                <img class="gh-site-logo" src="{{@site.logo}}" alt="{{@site.title}}">
            {{else}}
                <h1 class="gh-site-title">{{@site.title}}</h1>
            {{/if}}
        {{else match @custom.header_style "Left aligned"}}
            {{#if @site.logo}}
                <img class="gh-site-logo" src="{{@site.logo}}" alt="{{@site.title}}">
            {{else}}
                <h1 class="gh-site-title">{{@site.title}}</h1>
            {{/if}}
        {{/match}}
        {{#if @site.description}}
            <p class="gh-site-description">{{@site.description}}</p>
        {{/if}}
    </div>
</div>
{{/match}}

<div class="gh-page">
    <div class="gh-container">

        {{#match @custom.post_feed_layout "List"}}
            <div class="gh-postfeed is-list">
        {{else match @custom.post_feed_layout "Grid"}}
            <div class="gh-postfeed is-grid">
        {{else}}
            <div class="gh-postfeed is-classic">
        {{/match}}
        {{#foreach posts}}

            {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
