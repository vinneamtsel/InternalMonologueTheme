{
    "name": "internal-monologue",
    "description": "A minimalist zen editorial Ghost theme with dark/light mode toggle",
    "demo": "https://internal-monologue.ghost.io",
    "version": "1.4.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip $npm_package_name.zip assets/* partials/* members/* *.hbs package.json",
        "test": "npx gscan .",
        "pretest": "npm run build"
    },
    "author": {
        "name": "Internal Monologue",
        "email": "hello@internalmonologue.blog",
        "url": "https://internalmonologue.blog"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "minimal",
        "zen",
        "editorial",
        "dark-mode"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/InternalMonologueTheme/internal-monologue.git"
    },
    "bugs": "https://github.com/InternalMonologueTheme/internal-monologue/issues",
    "contributors": ["https://github.com/InternalMonologueTheme/internal-monologue/graphs/contributors"],
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-terser": "^0.4.0",
        "bestzip": "^2.2.1",
        "gscan": "^5.2.4",
        "postcss": "^8.4.24",
        "postcss-import": "^16.0.0",
        "postcss-preset-env": "^10.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        },
        "custom": {
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Auto"
            },
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on the left",
                    "Logo in the middle",
                    "Logo on the right"
                ],
                "default": "Logo in the middle"
            },
            "show_site_title": {
                "type": "boolean",
                "default": true
            },
            "show_site_description": {
                "type": "boolean",
                "default": true
            },
            "header_style": {
                "type": "select",
                "options": [
                    "Center aligned",
                    "Left aligned",
                    "Right aligned",
                    "Minimal"
                ],
                "default": "Minimal"
            },
            "header_height": {
                "type": "select",
                "options": [
                    "Small",
                    "Medium",
                    "Large"
                ],
                "default": "Medium"
            },
            "header_background": {
                "type": "select",
                "options": [
                    "Transparent",
                    "Solid color",
                    "Publication cover"
                ],
                "default": "Transparent"
            },
            "header_background_color": {
                "type": "color",
                "default": "#000000"
            },
            "header_text_color": {
                "type": "color",
                "default": "#000000"
            },
            "post_feed_layout": {
                "type": "select",
                "options": [
                    "Grid",
                    "List",
                    "Minimal"
                ],
                "default": "Grid"
            },
            "grid_columns": {
                "type": "select",
                "options": [
                    "2 columns",
                    "3 columns",
                    "4 columns"
                ],
                "default": "2 columns"
            },
            "grid_gap": {
                "type": "select",
                "options": [
                    "Small",
                    "Medium",
                    "Large"
                ],
                "default": "Medium"
            },
            "show_publish_date": {
                "type": "boolean",
                "default": true
            },
            "show_reading_time": {
                "type": "boolean",
                "default": true
            },
            "post_image_style": {
                "type": "select",
                "options": [
                    "Large",
                    "Full",
                    "Mid",
                    "Small"
                ],
                "default": "Large"
            },
            "show_post_metadata": {
                "type": "boolean",
                "default": true
            },
            "show_author_bio": {
                "type": "boolean",
                "default": true
            },
            "show_related_articles": {
                "type": "boolean",
                "default": true
            },
            "related_articles_count": {
                "type": "select",
                "options": [
                    "2",
                    "3",
                    "4"
                ],
                "default": "3"
            }
        }
    },
    "type": "module"
}
